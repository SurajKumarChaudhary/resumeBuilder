#resumeContent.container
  .row.justify-content-md-center
    .col-3.col-sm-2
      //- img(src='bvp_logo.png' style='height: 120px; width: 150px')
    .col-5.col-sm-5
      h1(style="font-family: 'Times New Roman', Times, serif")
        b= basic.firstName + ' ' + basic.lastName
      h2
        b= basic.profession
      h3= 'Phone: ' + basic.phoneNumber
      h3= 'Email: ' + basic.email
      h3= basic.city + ',' + basic.state + ' ' + basic.zipCode
    .col-4.col-sm-2
      //- img(src='passport.png' style='margin-left: 25px; margin-top: 15px')
      img(src='Raman.jpeg' style='margin-left: 25px; margin-top: 15px')
  .row.justify-content-md-center
    .col-12.col-sm-9
      h4(style='color: white')
        | BRIF OVERWIEW/ CURRENT OBJECTIVE/SUMMARY
  .row.justify-content-md-center
    .col-sm-9
      p
        | Seeking a company to getting start of my work and enhance my skills,
        | To secure a challenging position in this organisation in order to
        | improve my skill and work for the growth of the organisation
  
  if skills
    .row.justify-content-md-center
      .col-12.col-sm-9
        h4(style='color: white; margin-top: -8px')
          | KEY EXPERTISE / SKILLS
    .row.justify-content-md-center
      .col-sm-9
        if skills
          each val in skills 
            span.span 
              b= val 
      //- span.span
      //-   b Core Java
      //- span.span
      //-   b HTML
      //- span.span
      //-   b CSS
      //- span.span
      //-   b Bootstrap
      //- span.span
      //-   b Java Script
  .row.justify-content-md-center
    .col-12.col-sm-9
      h4(style='color: white; margin-top: 20px')
        | EDUCATION

  each val in education
    .row.justify-content-md-center(style='margin-top: 10px')
      .col-12.col-sm-9
        #myDIV.container-fluid
          .row.justify-content-md-center
            .col-10.col-sm-8
              h5(style='text-align: left')
                b= val.institute + ' , ' + val.university
            .col-2.col-sm-4
              h5(style='text-align: end')= val.startYear + ' - ' + val.endYear
          .row.justify-content-md-center
            .col-6.col-sm-6
              h5= val.degree
            .col-6.-sm-6
              h5= 'Percentage : ' +  val.percentage + '/ 100.00'


  if internship[0]
    .row.justify-content-md-center
      .col-12.col-sm-9
        h4(style='color: white; margin-top: 15px')
          | INTERNSHIP
    
    each val in internship
      .row.justify-content-md-center(style='margin-top: 3px')
        .col-12.col-sm-9
          #myDIV.container-fluid
            .row.justify-content-md-center
              .col-6.col-sm-8
                h5(style='text-align: left')
                  b= val.organisation
                h5(style='text-align: left')= val.role
              .col-6.col-sm-4
                h5(style='text-align: end')= val.startDate + ' - ' + val.endDate
            .row.justify-content-md-center
              .col-12.col-sm-12
                h5(style='text-align: left')
                  | Key Skills: &nbsp;&nbsp;
                  span.span
                    b= val.skills
                h5= val.jobDescription


  if certification[0]
    .row.justify-content-md-center
      .col-12.col-sm-9
        h4(style='color: white; margin-top: 15px')
          | CERTIFICATIONS
    
    each val in certification
      .row.justify-content-md-center(style='margin-top: 3px')
        .col-12.col-sm-9
          #myDIV.container-fluid
            .row.justify-content-md-center
              .col-6.col-sm-8
                h5(style='text-align: left')
                  b= val.organisation
                h5(style='text-align: left')!= '<strong>' + val.certName + '</strong>'
              .col-6.col-sm-4
                h5(style='text-align: end')= ' Valid till :  ' + val.validTill
            .row.justify-content-md-center
              .col-12.col-sm-12
                h5(style='text-align: left')
                  | Certified by : &nbsp;&nbsp;
                  span.span
                    b= val.certOrganisation
                h5= val.certDescription

  if project[0]    
    .row.justify-content-md-center
      .col-12.col-sm-9
        h4(style='color: white; margin-top: 15px')
          | PROJECT

    each val in project
      .row.justify-content-md-center(style='margin-top: 5px')
        .col-12.col-sm-9
          #myDIV.container-fluid
            .row.justify-content-md-center
              .col-6.col-sm-8
                h5(style='text-align: left')
                  b(style='left:0; margin-top: 10px; font-size:14px')= val.projectTitle
              //-   h5(style='text-align: left')
              //-     | Mentor: &nbsp;&nbsp;
              //-     span.span Dr. Baljeet Kaur
              //- .col-6.col-sm-4
              //-   h5(style='text-align: end') May 10, 2021 - June 29, 2021
              //-   h5(style='text-align: end')
              //-     | Team Size: &nbsp;&nbsp;
              //-     span.span
              //-       b 3
            .row.justify-content-md-center
              .col-12.col-sm-12
                h5(style='text-align: left; margin-top: 5px')
                  | Key Skills: &nbsp;&nbsp;
                  span.span
                    b= val.technologies
                  //- span.span
                  //-   b Databases
                h5= val.projectDescription
  if activities
    .row.justify-content-md-center
      .col-12.col-sm-9
        h4(style='color: white; margin-top: 10px')
          | EXTRA CURRICULAR ACTIVITIES
    .row.justify-content-md-center
      .col-12.col-sm-9
        ul#font-style-left-Div(style='list-style-type: disc')
          each val in activities
            li= val

  .row.justify-content-md-center
    .col-12.col-sm-9
      h4(style='color: white; margin-top: 10px')
        | PERSONAL DETAILS
  .row.justify-content-md-center
    .col-6.col-sm-5
      h5(style='margin-left: 10px')
        b Gender: 
        span= personal.gender
      h5(style='margin-left: 10px')
        b Marital Status: 
        span= personal.maritalStatus
      h5(style='margin-left: 10px')
        b Current Address: 
        span= personal.fullAddress
         
    .col-6.col-sm-4
      h5(style='margin-left: 10px')
        b Date Of Birth: 
        span= personal.dob
      h5(style='margin-left: 10px')
        b Phone Number: 
        span= basic.phoneNumber
      h5(style='margin-left: 10px')
        b Email: 
        span= basic.email
